@using BotDetect.Web.Mvc;
@model CoffeeShop.Web.Models.RegisterViewModel

<link href="@BotDetect.Web.CaptchaUrls.Absolute.LayoutStyleSheetUrl" />

@{ ViewBag.Title = "Register"; Layout = "~/Views/Shared/_Layout.cshtml"; }

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login V5</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    @section Styles{

        <!--===============================================================================================-->
        <link rel="icon" type="image/png" href="~/Assets/Client/form/login-form/images/icons/favicon.ico" />
        <!--===============================================================================================-->
        <!--<link rel="stylesheet" type="text/css" href="~/Assets/Client/form/login-form/vendor/bootstrap/css/bootstrap.min.css">-->
        <!--===============================================================================================-->
        <!--<link rel="stylesheet" type="text/css" href="~/Assets/Client/form/login-form/fonts/font-awesome-4.7.0/css/font-awesome.min.css">-->
        <!--===============================================================================================-->
        <link rel="stylesheet" type="text/css" href="~/Assets/Client/form/login-form/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
        <!--===============================================================================================-->
        <link rel="stylesheet" type="text/css" href="~/Assets/Client/form/login-form/vendor/animate/animate.css">
        <!--===============================================================================================-->
        <link rel="stylesheet" type="text/css" href="~/Assets/Client/form/login-form/vendor/css-hamburgers/hamburgers.min.css">
        <!--===============================================================================================-->
        <link rel="stylesheet" type="text/css" href="~/Assets/Client/form/login-form/vendor/animsition/css/animsition.min.css">
        <!--===============================================================================================-->
        <!--<link rel="stylesheet" type="text/css" href="~/Assets/Client/form/login-form/vendor/select2/select2.min.css">-->
        <!--===============================================================================================-->
        <!--<link rel="stylesheet" type="text/css" href="~/Assets/Client/form/login-form/vendor/daterangepicker/daterangepicker.css">-->
        <!--===============================================================================================-->
        <link rel="stylesheet" type="text/css" href="~/Assets/Client/form/login-form/css/util.css">
        <link rel="stylesheet" type="text/css" href="~/Assets/Client/form/login-form/css/main.css">
        <!--===============================================================================================-->
    }
</head>
<body>

    @if (ViewData["SuccessMsg"] != null)
    {
        @Html.Raw(ViewBag.SuccessForm)
    }
    else
    {
        <div class="limiter">
            <div class="container-login100" style="background-image: url(''); background-image: url('../../Assets/Client/images/slider-bg.jpg'); ">
                <div class="wrap-login100 p-l-110 p-r-110 p-t-62 p-b-33">
                    <form class="login100-form validate-form flex-sb flex-w"
                          action="@Url.Action("Register","Account")" method="post">

                        @Html.AntiForgeryToken()

                        <span class="login100-form-title p-b-53">
                            Create Account
                        </span>

                        <a href="#" class="btn-face m-b-20">
                            <i class="fa fa-facebook-official"></i>
                            Facebook
                        </a>

                        <a href="#" class="btn-google m-b-20">

                            <img src="~/Assets/Client/form/login-form/images/icons/icon-google.png" />
                            Google
                        </a>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="p-t-31 p-b-9">
                            <span class="txt1">
                                Email
                            </span>
                        </div>
                        <div class="wrap-input100 validate-input" data-validate="Email is required">
                            @*<input class="input100" type="email" name="email">*@
                            @Html.TextBoxFor(m => m.Email, new { @class = "input100", @type = "email" })
                            <span class="focus-input100"></span>
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>

                        <div class="p-t-31 p-b-9">
                            <span class="txt1">
                                Username
                            </span>
                        </div>
                        <div class="wrap-input100 validate-input" data-validate="Username is required">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "input100", @type = "text" })
                            <span class="focus-input100"></span>
                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                        </div>

                        <div class="p-t-13 p-b-9">
                            <span class="txt1">
                                Password
                            </span>
                        </div>
                        <div class="wrap-input100 validate-input" data-validate="Password is required">
                            @Html.TextBoxFor(m => m.Password, new { @class = "input100", @type = "password" })
                            <span class="focus-input100"></span>
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>

                        <div class="p-t-13 p-b-9">
                            <span class="txt1">
                                Confirm Password
                            </span>
                        </div>
                        <div class="wrap-input100 validate-input" data-validate="Confirm Password is required">
                            @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "input100", @type = "password" })
                            <span class="focus-input100"></span>
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                        </div>

                        <div class="p-t-13 p-b-9">
                            <span class="txt1">
                                Captcha
                            </span>
                        </div>
                        <div class="wrap-input100 validate-input" data-validate="Captcha code is not correct">
                            @{
                                MvcCaptcha mvcCaptcha = new MvcCaptcha("RegisterCaptcha");
                                mvcCaptcha.UserInputID = "CaptchaCode";
                            }
                            @Html.Captcha(mvcCaptcha)
                            @Html.TextBox("CaptchaCode", "", new { @class = "input100" })
                            @Html.ValidationMessage("CaptchaCode", "", new { @class = "text-danger" })
                        </div>

                        <div class="container-login100-form-btn m-t-17">
                            <button class="login100-form-btn" type="submit">
                                Sign up
                            </button>
                        </div>

                        <div class="w-full text-center p-t-55">
                            <span class="txt2">
                                Aready a member?
                            </span>

                            <a href="@Url.Action("Login","Account")" class="txt2 bo1" style="color: #eab676">
                                Sign in now
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }

    <div id="dropDownSelect1"></div>

    @section Scripts{

        <!--===============================================================================================-->
        @*<script src="~/Assets/Client/form/login-form/vendor/jquery/jquery-3.2.1.min.js"></script>*@
        <!--===============================================================================================-->
        <script src="~/Assets/Client/form/login-form/vendor/animsition/js/animsition.min.js"></script>
        <!--===============================================================================================-->
        @*<script src="~/Assets/Client/form/login-form/vendor/bootstrap/js/popper.js"></script>
            <script src="~/Assets/Client/form/login-form/vendor/bootstrap/js/bootstrap.min.js"></script>*@
        <!--===============================================================================================-->
        @*<script src="~/Assets/Client/form/login-form/vendor/select2/select2.min.js"></script>*@
        <!--===============================================================================================-->
        @*<script src="~/Assets/Client/form/login-form/vendor/daterangepicker/moment.min.js"></script>
            <script src="~/Assets/Client/form/login-form/vendor/daterangepicker/daterangepicker.js"></script>*@
        <!--===============================================================================================-->
        @*<script src="~/Assets/Client/form/login-form/vendor/countdowntime/countdowntime.js"></script>*@
        <!--===============================================================================================-->
        <script src="~/Assets/Client/form/login-form/js/main.js"></script>
    }
</body>
</html>