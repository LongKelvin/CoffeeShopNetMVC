
@{
    ViewBag.Title = "HomeProduct";
    Layout = null;
}
@model IEnumerable<CoffeeShop.Web.Models.ProductViewModel>
<!-- product section -->
<section class="product_section layout_padding">
    <div class="custom-container">
        <div class="heading_container heading_center">
            <h2>
                Our <span>Menu</span>
            </h2>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-sm-6 col-md-4 col-lg-4">
                    <div class="box">
                        <div class="option_container">
                            <div class="options">
                                <a href="" class="option3">
                                    View Detail
                                </a>
                                <a href="" class="option1">
                                    Add To Cart
                                </a>
                                <a href="" class="option2">
                                    Order Now
                                </a>

                            </div>
                        </div>
                        <div class="img-box">

                            <img src="@item.Images" />
                        </div>
                        <div class="detail-box">
                            <h5>
                               @item.Name
                            </h5>
                            <h6>
                                @item.Price
                            </h6>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="btn-box">
            <a href="@Url.Action("Index","Product")">
                View All products
            </a>
        </div>
    </div>
</section>
<!-- end product section -->
