@model CoffeeShop.Web.Models.ShopInfoViewModel

<link href="~/Assets/Admin/lib/font-awesome/css/all.css" rel="stylesheet" />
<style>
    #map_area{
        height:600px;
    }
</style>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Assets/Client/custom-css/contact.css" rel="stylesheet" />

<div class="heading_container heading_center">
    <h2>
        Contact <span>Detail</span>
    </h2>
</div>

@Html.Hidden("shopName",Model.Name);
@Html.Hidden("shopInfo",Model.Other);

<section class="contact_area p_120 mt-5">
    <div class="container mb-5">

        <div class="container row mt-3">
            <div class="col-lg-12 mb-5">
                <div class="container">

                    <div class="no-gutters contact-wrap align-items-stretch">
                        <div class="contact_info m-3">
                            <h4>Google Map Location</h4>
                            <div id="map_area" class=" form">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-12  ">
                <div class="container">
                    <div class="no-gutters contact-wrap align-items-stretch">
                        <div class="contact_info m-3">
                            <div class="info_item mb-2 row">
                                <div class="col-2">
                                   <i class="fa-solid fa-shop"
                                       style="color:rebeccapurple"></i>
                                </div>
                                <div class="col-10">
                                    <h6>
                                        @Model.Name
                                    </h6>
                                </div>

                            </div>
                            <div class="info_item mb-2 row">
                                <div class="col-2">
                                    <i class="fa-solid fa-location-dot"
                                       style="color:rebeccapurple"></i>
                                </div>
                                <div class="col-10">
                                    <h6>
                                        @Model.Address
                                    </h6>
                                </div>

                            </div>
                            <div class="info_item mb-2 row">
                                <div class="col-2">
                                    <i class="fa-solid fa-phone"
                                       style="color:rebeccapurple"></i>
                                </div>
                                <div class="col-10">
                                    <h6>
                                        <a>
                                            @Model.Telephone
                                        </a>
                                    </h6>
                                </div>

                            </div>
                            <div class="info_item row mt-2">
                                <div class="col-2">
                                    <i class="fa-solid fa-at"
                                       style="color:rebeccapurple"></i>
                                </div>
                                <div class="col-10">
                                    <h6>
                                        <a>

                                            @Model.Email
                                        </a>
                                    </h6>
                                </div>
                            </div>

                            <div class="info_item row mt-2">
                                <div class="col-2">
                                   <i class="fa-solid fa-info"
                                       style="color:rebeccapurple"></i>
                                </div>
                                <div class="col-10">
                                    <h6>
                                        <a>

                                            @Model.Other
                                        </a>
                                    </h6>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 mt-5">
                <div class="container">
                    <div class="row align-items-stretch no-gutters contact-wrap">
                        <div class="col-md-12">
                            <div class="form h-100">
                                <h4>Send us an email</h4>
                                <form class="mb-5" method="post" id="contactForm" name="contactForm" novalidate="novalidate">
                                    <div class="row">
                                        <div class="col-md-6 form-group mb-3">
                                            <label for="" class="col-form-label">Name *</label>
                                            <input type="text" class="form-control" name="name" id="name" placeholder="Your name">
                                        </div>
                                        <div class="col-md-6 form-group mb-3">
                                            <label for="" class="col-form-label">Email *</label>
                                            <input type="text" class="form-control" name="email" id="email" placeholder="Your email">
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-12 form-group mb-3">
                                            <label for="budget" class="col-form-label">Subject:</label>
                                            <input type="text" class="form-control" name="subject" id="subject" placeholder="Your email subject">
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-12 form-group mb-3">
                                            <label for="message" class="col-form-label">Message *</label>
                                            <textarea class="form-control" name="message" id="message" cols="30" rows="4" placeholder="Write your message"></textarea>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12 form-group">
                                            <div class="btn-box">
                                                <a href="" class="btn-checkout text-center flexible-btn">
                                                    Send Message
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </form>

                                <div id="form-message-warning mt-4"></div>
                                <div id="form-message-success">
                                    Your message was sent, thank you!
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>

<script src="~/Assets/Admin/lib/font-awesome/js/all.js"></script>

<!--
 The `defer` attribute causes the callback to execute after the full HTML
 document has been parsed. For non-blocking uses, avoiding race conditions,
 and consistent behavior across browsers, consider loading using Promises
 with https://www.npmjs.com/package/googlemaps/js-api-loader.
-->

<script>
    @*var googleMap_APIKEY = '@System.Configuration.ConfigurationManager.AppSettings["GooggleMapJavascript_API_KEY"]';
    var ggSource = "https://maps.googleapis.com/maps/api/js?key=" + googleMap_APIKEY + "&callback=initMap&v=weekly";*@

    // This example displays a marker at the center of Australia.
    // When the user clicks the marker, an info window opens.
    function initMap() {
        var shopName = $('#shopName').val();
        var shopInfo = $('#shopInfo').val();
        const shopLocation = { lat:@Model.Latitude, lng: @Model.Longitude };
        const map = new google.maps.Map(document.getElementById("map_area"), {
            zoom:19,
            center: shopLocation,
        });
        const contentString = shopInfo;
           
        const infowindow = new google.maps.InfoWindow({
            content: contentString,
        });
      
     
        const marker = new google.maps.Marker({
            position: shopLocation,
            map,
            title: shopName,
        });

        marker.addListener("click", () => {
            infowindow.open({
                anchor: marker,
                map,
                shouldFocus: false,
            });
        });
    }

    window.initMap = initMap;

</script>

<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAUkKjFBlL0C2yDfFazbCDMqwpFeqc2QQI&callback=initMap&v=weekly";
        defer></script>