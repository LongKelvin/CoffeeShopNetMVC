        <table class="table">
            <thead>
                <tr>
                    <th scope="col" style="width: 10px">STT</th>
                    <th scope="col" style="width: 20%">Tên sản phẩm</th>
                    <th scope="col" class="optional-sm" style="width: 10%">Danh mục</th>
                    <th scope="col" style="width: 10%">Giá</th>
                    <th scope="col" style="width: 10%">Giá KM</th>
                    <th scope="col" class="optional-sm" style="width: 10%">Lượt xem</th>
                    <th scope="col" class="optional-sm" style="width: 10%">Người tạo</th>
                    <th scope="col" class="optional-sm" style="width: 15%">Ngày tạo</th>
                    <th scope="col" style="width: 10%">Trạng thái</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    index = index + 1;

                    <tr>
                        <th scope="row">@index</th>
                        <td text-center>@item.Name</td>
                        <td text-center>@item.CategoryID</td>
                        <td text-center>@item.Price.ToString("C0", CultureInfo.CreateSpecificCulture("vn-VN"))</td>
                        <td text-center>@item.PromotionPrice</td>
                        <td text-center>@item.ViewCount</td>
                        <td text-center>@item.CreatedBy</td>
                        <td text-center>@item.CreatedDate</td>
